@page
@model DisasterAlleviationFoundation2.Pages.Monetary.EditModel
@{
}

<br />
<h2>Edit Monetary Donations</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' dat-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="post">
    <input type="hidden" name="id" value="@Model.monetaryInfo.monetaryid" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Date</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.monetaryInfo.date " />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Amount</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.monetaryInfo.amount " />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Donar</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.monetaryInfo.donar " />
        </div>
    </div>

    @if (Model.sucessMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.sucessMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>